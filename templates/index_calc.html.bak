<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculation Manager</title>
    
    <style>
        /* CSS Variables for Theme */
        :root {
            --primary-color: #4A90E2;
            --primary-dark: #357ABD;
            --secondary-color: #50E3C2;
            --success-color: #7ED321;
            --warning-color: #F5A623;
            --danger-color: #E74C3C;
            --info-color: #5BC0DE;
            --dark-text: #2C3E50;
            --light-text: #7F8C8D;
            --bg-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.1);
            --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.15);
            --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.2);
        }

        /* Global Styles with Animation */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slideIn {
            from {
                transform: translateX(-100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @keyframes pulse {
            0%, 100% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.05);
            }
        }

        @keyframes shimmer {
            0% {
                background-position: -1000px 0;
            }
            100% {
                background-position: 1000px 0;
            }
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            line-height: 1.6;
            color: var(--dark-text);
            animation: fadeIn 0.6s ease-out;
        }
        
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 30px 20px;
        }
        
        .section {
            background: white;
            padding: 30px;
            border-radius: 16px;
            box-shadow: var(--shadow-lg);
            margin-bottom: 25px;
            animation: fadeIn 0.6s ease-out;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            border: 1px solid rgba(255, 255, 255, 0.18);
        }

        .section:hover {
            transform: translateY(-2px);
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
        }
        
        .grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 25px;
        }
        
        h1 {
            text-align: center;
            color: white;
            margin-bottom: 40px;
            font-size: 2.5rem;
            font-weight: 700;
            text-shadow: 2px 4px 8px rgba(0, 0, 0, 0.3);
            letter-spacing: -0.5px;
            animation: slideIn 0.8s ease-out;
        }
        
        h2 {
            color: var(--dark-text);
            border-bottom: 3px solid var(--primary-color);
            padding-bottom: 12px;
            margin-bottom: 25px;
            font-size: 1.5rem;
            font-weight: 600;
            position: relative;
        }

        h2::after {
            content: '';
            position: absolute;
            bottom: -3px;
            left: 0;
            width: 60px;
            height: 3px;
            background: var(--secondary-color);
            transition: width 0.3s ease;
        }

        h2:hover::after {
            width: 120px;
        }

        h3 {
            color: var(--dark-text);
            font-weight: 600;
            margin-bottom: 15px;
        }
        
        input[type="number"], 
        input[type="text"], 
        input[type="email"],
        input[type="password"],
        select {
            width: 100%;
            padding: 14px 16px;
            margin: 10px 0;
            border: 2px solid #E0E7FF;
            border-radius: 10px;
            font-size: 15px;
            box-sizing: border-box;
            transition: all 0.3s ease;
            background: white;
            font-family: inherit;
        }

        input:focus, select:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(74, 144, 226, 0.1);
            transform: translateY(-1px);
        }

        input::placeholder {
            color: #A0AEC0;
        }
        
        button {
            padding: 12px 24px;
            margin: 5px;
            border: none;
            border-radius: 10px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            box-shadow: var(--shadow-sm);
            position: relative;
            overflow: hidden;
        }

        button::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.3);
            transform: translate(-50%, -50%);
            transition: width 0.6s, height 0.6s;
        }

        button:hover::before {
            width: 300px;
            height: 300px;
        }

        button:active {
            transform: scale(0.96);
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-dark));
            color: white;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(74, 144, 226, 0.4);
        }
        
        .btn-success {
            background: linear-gradient(135deg, #7ED321, #5FB904);
            color: white;
        }
        
        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(126, 211, 33, 0.4);
        }
        
        .btn-danger {
            background: linear-gradient(135deg, #E74C3C, #C0392B);
            color: white;
        }
        
        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(231, 76, 60, 0.4);
        }
        
        .btn-warning {
            background: linear-gradient(135deg, #F5A623, #E89A0F);
            color: white;
        }
        
        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(245, 166, 35, 0.4);
        }
        
        .btn-info {
            background: linear-gradient(135deg, #5BC0DE, #31B0D5);
            color: white;
        }
        
        .btn-info:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(91, 192, 222, 0.4);
        }
        
        #result, #calculations-result {
            margin-top: 15px;
            padding: 16px;
            background: linear-gradient(135deg, #F8F9FA 0%, #E9ECEF 100%);
            border-radius: 10px;
            border: 2px solid #DEE2E6;
            min-height: 30px;
            animation: fadeIn 0.4s ease;
        }
        
        .calculation-item {
            background: linear-gradient(135deg, #FFFFFF 0%, #F8F9FA 100%);
            border: 2px solid #E0E7FF;
            border-radius: 12px;
            padding: 20px;
            margin: 15px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s ease;
            animation: slideIn 0.5s ease-out;
        }

        .calculation-item:hover {
            transform: translateX(5px);
            box-shadow: var(--shadow-md);
            border-color: var(--primary-color);
        }
        
        .calculation-info {
            flex-grow: 1;
            font-size: 15px;
            color: var(--dark-text);
        }

        .calculation-info strong {
            color: var(--primary-color);
        }
        
        .calculation-actions {
            display: flex;
            gap: 8px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--dark-text);
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .error {
            color: var(--danger-color);
            font-weight: 600;
            animation: pulse 0.5s ease-in-out;
        }
        
        .success {
            color: var(--success-color);
            font-weight: 600;
            animation: pulse 0.5s ease-in-out;
        }
        
        .hidden {
            display: none;
        }
        
        #auth-section {
            text-align: center;
            padding: 40px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            margin-bottom: 30px;
            box-shadow: var(--shadow-lg);
            animation: fadeIn 0.6s ease-out;
        }
        
        #user-info {
            background: linear-gradient(135deg, #D4EDDA 0%, #C3E6CB 100%);
            color: #155724;
            padding: 16px;
            border-radius: 12px;
            margin-bottom: 20px;
            font-weight: 600;
            box-shadow: var(--shadow-sm);
            animation: slideIn 0.5s ease-out;
        }
        
        #login-form, #register-form {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .form-container {
            display: grid;
            gap: 15px;
        }

        #calculations-list {
            max-height: 600px;
            overflow-y: auto;
            padding-right: 10px;
        }

        /* Custom Scrollbar */
        #calculations-list::-webkit-scrollbar {
            width: 8px;
        }

        #calculations-list::-webkit-scrollbar-track {
            background: #F1F1F1;
            border-radius: 10px;
        }

        #calculations-list::-webkit-scrollbar-thumb {
            background: var(--primary-color);
            border-radius: 10px;
        }

        #calculations-list::-webkit-scrollbar-thumb:hover {
            background: var(--primary-dark);
        }

        /* Loading Animation */
        @keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        .loading {
            display: inline-block;
            width: 20px;
            height: 20px;
            border: 3px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: white;
            animation: spin 1s linear infinite;
        }
        
        @media (max-width: 768px) {
            .grid {
                grid-template-columns: 1fr;
            }
            
            .container {
                padding: 15px 10px;
            }

            h1 {
                font-size: 2rem;
            }

            .section {
                padding: 20px;
            }

            button {
                width: 100%;
                margin: 5px 0;
            }

            .calculation-item {
                flex-direction: column;
                gap: 15px;
                text-align: center;
            }

            .calculation-actions {
                width: 100%;
                justify-content: center;
            }
        }

        /* Enhance edit section */
        #edit-section {
            background: linear-gradient(135deg, #FFF9E6 0%, #FFF3D6 100%);
            border: 2px solid var(--warning-color);
            padding: 25px;
            border-radius: 12px;
            margin-top: 20px;
            animation: fadeIn 0.5s ease-out;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Calculation Manager</h1>
        
        <!-- Authentication Section -->
        <div id="auth-section" class="section">
            <div id="user-info" class="hidden">
                <span id="welcome-message"></span>
                <button onclick="logout()" class="btn-danger">Logout</button>
            </div>
            
            <div id="login-register-forms">
                <div id="login-form">
                    <h3>Login</h3>
                    <div class="form-container">
                        <input type="text" id="login-username" placeholder="Username" required>
                        <input type="password" id="login-password" placeholder="Password" required>
                        <button onclick="login()" class="btn-primary">Login</button>
                    </div>
                </div>
                
                <div id="register-form" style="margin-top: 20px;">
                    <h3>Register</h3>
                    <div class="form-container">
                        <input type="text" id="register-first-name" placeholder="First Name" required>
                        <input type="text" id="register-last-name" placeholder="Last Name" required>
                        <input type="text" id="register-username" placeholder="Username" required>
                        <input type="email" id="register-email" placeholder="Email" required>
                        <input type="password" id="register-password" placeholder="Password" required>
                        <button onclick="register()" class="btn-success">Register</button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Calculation Management -->
        <div id="main-content" class="hidden">
            <div class="grid">
                <!-- Add New Calculation Section -->
                <div class="section">
                    <h2>Add New Calculation</h2>
                    <div class="form-group">
                        <label for="calc-a">First Number:</label>
                        <input type="number" id="calc-a" placeholder="Enter first number" step="any">
                    </div>
                    
                    <div class="form-group">
                        <label for="calc-b">Second Number:</label>
                        <input type="number" id="calc-b" placeholder="Enter second number" step="any">
                    </div>
                    
                    <div class="form-group">
                        <label for="calc-type">Operation:</label>
                        <select id="calc-type">
                            <option value="Add">Addition</option>
                            <option value="Sub">Subtraction</option>
                            <option value="Multiply">Multiplication</option>
                            <option value="Divide">Division</option>
                        </select>
                    </div>
                    
                    <button onclick="addCalculation()" class="btn-success">Add Calculation</button>
                </div>
            </div>

            <!-- Calculation Management Section -->
            <div class="section">
                <h2>Your Calculations</h2>
                <div style="margin-bottom: 15px;">
                    <button onclick="loadCalculations()" class="btn-info">Refresh Calculations</button>
                    <input type="number" id="search-id" placeholder="Enter calculation ID" style="width: 200px; display: inline-block;">
                    <button onclick="searchCalculation()" class="btn-info">Search by ID</button>
                </div>
                
                <div id="calculations-result"></div>
                <div id="calculations-list"></div>
            </div>

            <!-- Edit Calculation Modal (simplified as inline form) -->
            <div id="edit-section" class="section hidden">
                <h2>Edit Calculation</h2>
                <input type="hidden" id="edit-calc-id">
                
                <div class="form-group">
                    <label for="edit-calc-a">First Number:</label>
                    <input type="number" id="edit-calc-a" step="any">
                </div>
                
                <div class="form-group">
                    <label for="edit-calc-b">Second Number:</label>
                    <input type="number" id="edit-calc-b" step="any">
                </div>
                
                <div class="form-group">
                    <label for="edit-calc-type">Operation:</label>
                    <select id="edit-calc-type">
                        <option value="Add">Addition</option>
                        <option value="Sub">Subtraction</option>
                        <option value="Multiply">Multiplication</option>
                        <option value="Divide">Division</option>
                    </select>
                </div>
                
                <button onclick="updateCalculation()" class="btn-warning">Update</button>
                <button onclick="cancelEdit()" class="btn-danger">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        let authToken = localStorage.getItem('authToken');
        let currentUser = null;

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            if (authToken) {
                checkAuthStatus();
            }
        });

        // Authentication functions
        async function login() {
            const username = document.getElementById('login-username').value;
            const password = document.getElementById('login-password').value;
            
            if (!username || !password) {
                alert('Please enter both username and password');
                return;
            }

            try {
                const response = await fetch('/users/login', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ username, password })
                });

                const data = await response.json();
                
                if (response.ok) {
                    authToken = data.access_token;
                    localStorage.setItem('authToken', authToken);
                    showMainContent();
                    loadCalculations();
                } else {
                    alert('Login failed: ' + data.error);
                }
            } catch (error) {
                alert('Login error: ' + error.message);
            }
        }

        async function register() {
            const firstName = document.getElementById('register-first-name').value;
            const lastName = document.getElementById('register-last-name').value;
            const username = document.getElementById('register-username').value;
            const email = document.getElementById('register-email').value;
            const password = document.getElementById('register-password').value;
            
            if (!firstName || !lastName || !username || !email || !password) {
                alert('Please fill in all fields');
                return;
            }

            try {
                const response = await fetch('/users/register', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ 
                        first_name: firstName, 
                        last_name: lastName, 
                        username, 
                        email, 
                        password 
                    })
                });

                const data = await response.json();
                
                if (response.ok) {
                    alert('Registration successful! Please login.');
                    // Clear registration form
                    document.getElementById('register-first-name').value = '';
                    document.getElementById('register-last-name').value = '';
                    document.getElementById('register-username').value = '';
                    document.getElementById('register-email').value = '';
                    document.getElementById('register-password').value = '';
                } else {
                    alert('Registration failed: ' + data.error);
                }
            } catch (error) {
                alert('Registration error: ' + error.message);
            }
        }

        async function checkAuthStatus() {
            try {
                const response = await fetch('/users/me', {
                    headers: { 'Authorization': 'Bearer ' + authToken }
                });

                if (response.ok) {
                    const userData = await response.json();
                    currentUser = userData;
                    showMainContent();
                    loadCalculations();
                } else {
                    logout();
                }
            } catch (error) {
                logout();
            }
        }

        function logout() {
            authToken = null;
            currentUser = null;
            localStorage.removeItem('authToken');
            showAuthSection();
        }

        function showMainContent() {
            document.getElementById('auth-section').classList.add('hidden');
            document.getElementById('main-content').classList.remove('hidden');
            if (currentUser) {
                document.getElementById('user-info').classList.remove('hidden');
                document.getElementById('welcome-message').textContent = `Welcome, ${currentUser.username}!`;
            }
        }

        function showAuthSection() {
            document.getElementById('auth-section').classList.remove('hidden');
            document.getElementById('main-content').classList.add('hidden');
            document.getElementById('user-info').classList.add('hidden');
        }

        // Calculation BREAD operations
        async function addCalculation() {
            const a = parseFloat(document.getElementById('calc-a').value);
            const b = parseFloat(document.getElementById('calc-b').value);
            const type = document.getElementById('calc-type').value;
            
            if (isNaN(a) || isNaN(b)) {
                alert('Please enter valid numbers');
                return;
            }

            try {
                const response = await fetch('/calculations', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + authToken
                    },
                    body: JSON.stringify({ a, b, type })
                });

                const data = await response.json();
                
                if (response.ok) {
                    alert('Calculation added successfully!');
                    // Clear form
                    document.getElementById('calc-a').value = '';
                    document.getElementById('calc-b').value = '';
                    document.getElementById('calc-type').value = 'Add';
                    loadCalculations();
                } else {
                    alert('Error adding calculation: ' + data.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        async function loadCalculations() {
            try {
                const response = await fetch('/calculations', {
                    headers: { 'Authorization': 'Bearer ' + authToken }
                });

                const data = await response.json();
                
                if (response.ok) {
                    displayCalculations(data);
                } else {
                    document.getElementById('calculations-result').innerHTML = 
                        `<span class="error">Error loading calculations: ${data.error}</span>`;
                }
            } catch (error) {
                document.getElementById('calculations-result').innerHTML = 
                    `<span class="error">Error: ${error.message}</span>`;
            }
        }

        async function searchCalculation() {
            const id = document.getElementById('search-id').value;
            
            if (!id) {
                alert('Please enter a calculation ID');
                return;
            }

            try {
                const response = await fetch(`/calculations/${id}`, {
                    headers: { 'Authorization': 'Bearer ' + authToken }
                });

                const data = await response.json();
                
                if (response.ok) {
                    displayCalculations([data]);
                } else {
                    document.getElementById('calculations-result').innerHTML = 
                        `<span class="error">Error: ${data.error}</span>`;
                }
            } catch (error) {
                document.getElementById('calculations-result').innerHTML = 
                    `<span class="error">Error: ${error.message}</span>`;
            }
        }

        function displayCalculations(calculations) {
            const listElement = document.getElementById('calculations-list');
            
            if (calculations.length === 0) {
                listElement.innerHTML = '<p>No calculations found.</p>';
                return;
            }

            let html = '';
            calculations.forEach(calc => {
                html += `
                    <div class="calculation-item">
                        <div class="calculation-info">
                            <strong>ID:</strong> ${calc.id}<br>
                            <strong>Expression:</strong> ${calc.a} ${getOperatorSymbol(calc.type)} ${calc.b} = ${calc.result}
                        </div>
                        <div class="calculation-actions">
                            <button onclick="editCalculation(${calc.id})" class="btn-warning">Edit</button>
                            <button onclick="deleteCalculation(${calc.id})" class="btn-danger">Delete</button>
                        </div>
                    </div>
                `;
            });
            
            listElement.innerHTML = html;
            document.getElementById('calculations-result').innerHTML = 
                `<span class="success">Found ${calculations.length} calculation(s)</span>`;
        }

        function getOperatorSymbol(type) {
            switch(type) {
                case 'Add': return '+';
                case 'Sub': return '-';
                case 'Multiply': return 'ร';
                case 'Divide': return 'รท';
                default: return type;
            }
        }

        async function editCalculation(id) {
            try {
                const response = await fetch(`/calculations/${id}`, {
                    headers: { 'Authorization': 'Bearer ' + authToken }
                });

                const data = await response.json();
                
                if (response.ok) {
                    document.getElementById('edit-calc-id').value = data.id;
                    document.getElementById('edit-calc-a').value = data.a;
                    document.getElementById('edit-calc-b').value = data.b;
                    document.getElementById('edit-calc-type').value = data.type;
                    document.getElementById('edit-section').classList.remove('hidden');
                } else {
                    alert('Error loading calculation: ' + data.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        async function updateCalculation() {
            const id = document.getElementById('edit-calc-id').value;
            const a = parseFloat(document.getElementById('edit-calc-a').value);
            const b = parseFloat(document.getElementById('edit-calc-b').value);
            const type = document.getElementById('edit-calc-type').value;
            
            if (isNaN(a) || isNaN(b)) {
                alert('Please enter valid numbers');
                return;
            }

            try {
                const response = await fetch(`/calculations/${id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': 'Bearer ' + authToken
                    },
                    body: JSON.stringify({ a, b, type })
                });

                const data = await response.json();
                
                if (response.ok) {
                    alert('Calculation updated successfully!');
                    cancelEdit();
                    loadCalculations();
                } else {
                    alert('Error updating calculation: ' + data.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        async function deleteCalculation(id) {
            if (!confirm('Are you sure you want to delete this calculation?')) {
                return;
            }

            try {
                const response = await fetch(`/calculations/${id}`, {
                    method: 'DELETE',
                    headers: { 'Authorization': 'Bearer ' + authToken }
                });
                
                if (response.ok) {
                    alert('Calculation deleted successfully!');
                    loadCalculations();
                } else {
                    const data = await response.json();
                    alert('Error deleting calculation: ' + data.error);
                }
            } catch (error) {
                alert('Error: ' + error.message);
            }
        }

        function cancelEdit() {
            document.getElementById('edit-section').classList.add('hidden');
        }
    </script>
</body>
